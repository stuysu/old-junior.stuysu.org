<head>
  <link rel='stylesheet' href='/stylesheets/admin/calendar.css' />
</head>

<div class="glass calendar-container">
  <div class="date-select glass">

    <h3>Date Select</h3>

    <select class='form-input glass' id="month-select" onchange="updateCalendarForm()">
  
        <option value="1">January</option>
        <option value="2">February</option>
        <option value="3">March</option>
        <option value="4">April</option>
        <option value="5">May</option>
        <option value="6">June</option>
        <option value="7">July</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
  
    </select>
  
    <input type='number' class='form-input glass' id="day-select" onchange="updateCalendarForm()" value='1' min='1' max='31' />
    <input type='number' class='form-input glass' id="year-select" value='2021' min='2021' onchange="updateCalendarForm()" />
  
  </div>
  <div class="glass calendar-form">
    <table id="calendar-form">
      <thead>
        <tr><th scope="col"><h3>Date Info</h3></th></tr>
      </thead>
      <tbody>
        <tr>
          <td>
              <select class="form-input glass" id="calendar-day-letter" placeholder="Day Letter">
                <option value="" disabled selected>Day Letter</option>
                <option value="A1">A</option>
                <option value="A1">A1</option>
                <option value="A2">A2</option>
                <option value="A2">B</option>
                <option value="B1">B1</option>
                <option value="B2">B2</option>
              </select>
  
                  <!-- Starts 6 period?: 
                  <input type='checkbox' id="calendar-is-late"><br>
                  
                  Remote Group?:
                  <select class="form-input glass" id="calendar-remote-group">
                      <option value="Peg Day">Peg Day</option>
                      <option value="Stuy Day">Stuy Day</option>
                      <option value="All Remote">All Remote</option>
                  </select> -->

                  <select class="form-input glass" id="calendar-day-type">
                    <option value="" disabled selected>Day Type | Blank If Normal</option>
                    <option value=""></option>
                    <option value="Homeroom Day">Homeroom Day</option>
                    <option value="Conference Day">Conference Day</option>
                  </select>
  
                  <input type="text" class="form-input glass" id="calendar-notes" placeholder="Optional Notes" maxlength="56" />
                  <button class="glass button" onclick="saveDate()">Save</button> 
                  <button class="glass button" onclick="clearDate()">Delete</button> 
                  
              </td>
  
          </tr>
      </tbody>
    </table>
  </div>
  
